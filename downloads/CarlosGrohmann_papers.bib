@Article{Jacques2014,
  author    = {Patricia D. Jacques and Elizete D. Salvador and R\^{o}mulo Machado and Carlos H. Grohmann and Alexis R. Nummer},
  title     = {{Application of morphometry in neotectonic studies at the eastern edge of the Paraná Basin, Santa Catarina State, Brazil}},
  journal   = {Geomorphology},
  year      = {2014},
  volume    = {213},
  number    = {0},
